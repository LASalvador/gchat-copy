{
"manifest_version": 2,
    "name": "Google Chat thread links",
    "description": "Adds button to copy links to threads on Google Chat",
    "version": "0.0.6",
    "content_scripts": [
        {
            "matches": [
                "https://chat.google.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ]
}